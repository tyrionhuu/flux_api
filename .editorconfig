# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.py]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{c,h,cpp,hpp,cc}]
indent_style = tab
tab_width = 8

[*.sh]
indent_style = tab
tab_width = 8

[*.js]
indent_style = space
indent_size = 2

